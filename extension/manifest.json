{
  "manifest_version": 3,
  "name": "PopTech STT",
  "version": "1.0.0",
  "description": "Capture mic + system audio for real-time speech-to-text",
  
  "permissions": [
    "storage",       
    "alarms",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PopTech STT",
    "default_icon": {
        "16": "icons/mic-idle-16.png",
        "32": "icons/mic-idle-32.png", 
        "48": "icons/mic-idle-48.png",
        "128": "icons/mic-idle-128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "icons": {
    "16": "icons/mic-idle-16.png",
    "32": "icons/mic-idle-32.png", 
    "48": "icons/mic-idle-48.png",
    "128": "icons/mic-idle-128.png"
  }
}